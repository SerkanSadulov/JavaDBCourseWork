<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/17"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.ru.mag.db.jdbc.app.controllers.DeliveryProductController"
          alignment="center"
          hgap="10"
          vgap="10"
          prefWidth="760"
          prefHeight="520">

    <columnConstraints>
        <ColumnConstraints halignment="RIGHT"/>
        <ColumnConstraints halignment="LEFT"/>
    </columnConstraints>

    <Label text="Line ID:"/>
    <TextField fx:id="txtDeliveryProductId" GridPane.columnIndex="1"/>

    <Label text="Delivery ID:" GridPane.rowIndex="1"/>
    <TextField fx:id="txtDeliveryId" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Product ID:" GridPane.rowIndex="2"/>
    <TextField fx:id="txtProductId" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Batch ID:" GridPane.rowIndex="3"/>
    <TextField fx:id="txtBatchId" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Quantity:" GridPane.rowIndex="4"/>
    <TextField fx:id="txtQty" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Unit Price:" GridPane.rowIndex="5"/>
    <TextField fx:id="txtUnitPrice" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <HBox spacing="10" GridPane.rowIndex="6" GridPane.columnSpan="2" alignment="CENTER">
        <Button text="Create" onAction="#create"/>
        <Button text="Update" onAction="#update"/>
        <Button text="Delete" onAction="#delete"/>
    </HBox>

    <TableView fx:id="tblLines"
               GridPane.rowIndex="7"
               GridPane.columnSpan="2"
               prefHeight="260"
               onMouseClicked="#onSelect">

        <columns>
            <TableColumn fx:id="colId" text="Line ID" prefWidth="90"/>
            <TableColumn fx:id="colDelivery" text="Delivery" prefWidth="100"/>
            <TableColumn fx:id="colProduct" text="Product" prefWidth="100"/>
            <TableColumn fx:id="colQty" text="Qty" prefWidth="100"/>
        </columns>
    </TableView>
</GridPane>
