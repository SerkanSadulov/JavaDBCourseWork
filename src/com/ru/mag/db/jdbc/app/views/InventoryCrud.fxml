<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/17"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.ru.mag.db.jdbc.app.controllers.InventoryController"
          alignment="center"
          hgap="10"
          vgap="10"
          prefWidth="600"
          prefHeight="450">

    <columnConstraints>
        <ColumnConstraints halignment="RIGHT"/>
        <ColumnConstraints halignment="LEFT"/>
    </columnConstraints>

    <Label text="Batch ID:"/>
    <TextField fx:id="txtBatchId" GridPane.columnIndex="1"/>

    <Label text="Quantity:" GridPane.rowIndex="1"/>
    <TextField fx:id="txtQty" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Min Qty:" GridPane.rowIndex="2"/>
    <TextField fx:id="txtMinQty" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <HBox spacing="10" GridPane.rowIndex="3" GridPane.columnSpan="2" alignment="CENTER">
        <Button text="Save" onAction="#save"/>
        <Button text="Delete" onAction="#delete"/>
    </HBox>

    <TableView fx:id="tblInventory"
               GridPane.rowIndex="4"
               GridPane.columnSpan="2"
               prefHeight="240"
               onMouseClicked="#onSelect">

        <columns>
            <TableColumn fx:id="colBatch" text="Batch ID" prefWidth="120"/>
            <TableColumn fx:id="colQty" text="Quantity" prefWidth="120"/>
            <TableColumn fx:id="colMin" text="Min Qty" prefWidth="120"/>
        </columns>
    </TableView>
</GridPane>
