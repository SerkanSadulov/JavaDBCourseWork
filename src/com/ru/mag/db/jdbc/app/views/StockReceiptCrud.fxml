<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/17"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.ru.mag.db.jdbc.app.controllers.StockReceiptController"
          alignment="center"
          hgap="10"
          vgap="10"
          prefWidth="700"
          prefHeight="520">

    <columnConstraints>
        <ColumnConstraints halignment="RIGHT"/>
        <ColumnConstraints halignment="LEFT"/>
    </columnConstraints>

    <Label text="Receipt ID:"/>
    <TextField fx:id="txtReceiptId" GridPane.columnIndex="1"/>

    <Label text="Supplier ID:" GridPane.rowIndex="1"/>
    <TextField fx:id="txtSupplierId" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Document No:" GridPane.rowIndex="2"/>
    <TextField fx:id="txtDocNo" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Received At:" GridPane.rowIndex="3"/>
    <DatePicker fx:id="dpReceived" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Note:" GridPane.rowIndex="4"/>
    <TextField fx:id="txtNote" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <HBox spacing="10" GridPane.rowIndex="5" GridPane.columnSpan="2" alignment="CENTER">
        <Button text="Create" onAction="#create"/>
        <Button text="Update" onAction="#update"/>
        <Button text="Delete" onAction="#delete"/>
    </HBox>

    <TableView fx:id="tblReceipts"
               GridPane.rowIndex="6"
               GridPane.columnSpan="2"
               prefHeight="250"
               onMouseClicked="#onSelect">

        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
            <TableColumn fx:id="colSupplier" text="Supplier" prefWidth="100"/>
            <TableColumn fx:id="colDoc" text="Doc No" prefWidth="160"/>
            <TableColumn fx:id="colDate" text="Received" prefWidth="120"/>
        </columns>
    </TableView>
</GridPane>
