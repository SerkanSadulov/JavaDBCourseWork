<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/17"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.ru.mag.db.jdbc.app.controllers.IngredientController"
          alignment="center"
          hgap="10"
          vgap="10"
          prefWidth="500"
          prefHeight="350">

    <columnConstraints>
        <ColumnConstraints halignment="RIGHT"/>
        <ColumnConstraints halignment="LEFT"/>
    </columnConstraints>

    <Label text="Ingredient ID:" GridPane.rowIndex="0"/>
    <TextField fx:id="txtIngredientId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Name:" GridPane.rowIndex="1"/>
    <TextField fx:id="txtName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnSpan="2" alignment="CENTER">
        <Button text="Create" onAction="#create"/>
        <Button text="Update" onAction="#update"/>
        <Button text="Delete" onAction="#delete"/>
    </HBox>

    <TableView fx:id="tblIngredients"
               GridPane.rowIndex="3"
               GridPane.columnSpan="2"
               prefHeight="200"
               onMouseClicked="#onSelect">

        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="120"/>
            <TableColumn fx:id="colName" text="Name" prefWidth="250"/>
        </columns>
    </TableView>

</GridPane>
